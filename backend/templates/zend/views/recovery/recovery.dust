<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <base href="{backend_url}">
  <link rel="stylesheet" href="css/general/bootstrap.css">
  <link rel="stylesheet" href="css/general/fontAwsome.css">
  <link rel="stylesheet" href="css/general/general-css.css">
  <link rel="stylesheet" href="css/cms/login.css">
  <link rel="stylesheet" href="css/general/error.css">
  <title>بازیابی رمز عبور</title>
</head>

<body  class="main_field_of_dashbord_login" dir="ltr">

  <section>
    <div class="container-fluid">
      <div class="row">
        <div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-10 offset-md-1 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
          <div class="row row_of_dashbord_login_form">

            <div class="col-12 col-md-6 offset-md-1 col_of_log_custom">
              <div>
                <p class="text-center header_of_dashbord_login">
                 بازیابی رمز عبور
                </p>
              </div>

              <div id="main_field_of_dashbord_login_form_id" class="main_field_of_dashbord_login_form">

                {@alertWarn key="invalid-email" msg="لطفا یک ایمیل معتبر وارد نمایید"}{/alertWarn}
                {@alertError key="sent-fail" msg="ایمیل بازیابی ارسال نشد. لطفا مجددا تلاش فرمایید"}{/alertError}

                <div class="error_warning_alert text-right display_none" id="error_field_warning_front"> 

                  <i class="fal fa-times d-inline-block remove_error_icon" onclick="removeWarningErrorFront()"></i> 
                  <i class="fal fa-exclamation-circle alert_icon_error"></i>

                    <div class="d-inline-block mr-1" id="error_text"></div>

                </div>

                <form action="" method="post" name="dashbord_login_form" onsubmit="return recoveryfunc()">

                  <div class="form-group">
                    <label for="email-for-id" class="text-right d-block"> : ایمیل خود را جهت بازیابی رمز عبور وارد نمایید</label>
                    
                    <input type="text" class="form-control dir-rtl dashbord_login_input" id="email-for-id"
                      name="email_inp" aria-describedby="recovery_small_text" autocomplete="off">
                      <small id="recovery_small_text" class="form-text text-muted text-right">یک ایمیل حاوی لینک بازیابی رمز عبور برای شما ارسال میشود . لطفا قسمت اسپم ایمیل خود را نیز بررسی فرمایید</small>
                  </div>
                  
                  <button type="submit" class="btn sub_btn_of_dashbord_form">بازیابی</button>

                </form>
              </div>
            </div>

            <div class="col-12 col-md-4 p-0 col_of_left_log_part d-none d-md-block col_of_log_custom_second">
              <img class="w-100 blur_img_for_login_form" src="img/cms-login-img.jpg" alt="" title="">

              <div class="logo-field">
                <img class="zend_logo_of_dashbord_form" src="img/fade-zend-logo.png" alt="" title="">
                <p class="text-center small_of_logo">
                  version {zend_cms_version}
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  

  <script src="js/general/jquery.js"></script>
  <script src="js/general/popper.js"></script>
  <script src="js/general/bootstrap.js"></script>
  <script src="js/general/wow.js"></script>
  <script src="js/general/error.js"></script>
  <script src="js/cms/login.js"></script>


</body>

</html>